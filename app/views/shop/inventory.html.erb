<div class="container">
  <h1>Your Inventory:</h1>

  <div class="inventory row text-center text-lg-left">

    <% @items = InventoryItem.where(uniqueid: current_user.uniqueid) %>
    <% @items.each do |item| %>


        <button class="item-button col-lg-2 col-md-4 col-xs-6" type="button" data-toggle="modal" data-target="#exampleModal">
          <img class="item-image" src="/images/<%= (ShopItem.where(item: item.item).first).picturename %>"/>
          <p class="item-title"><%= item.item %></p>
          <p class="item-quantity">Q: <%= item.quantity %></p>
        </button>

        <!-- MODALS -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">TestModal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <p>This is a Testmodal</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>

      <% end %>

  </div>




</div>
